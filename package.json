{
  "name": "suffragium",
  "version": "1.0.0",
  "description": "Create polls quickly and watch the results change in real time!",
  "main": "app.js",
  "scripts": {
    "prestart": "npm install bower install",
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "dev:debug": "DEBUG=*,-nodemon*,-send*, npm run dev",
    "dev:debug:socket": "DEBUG=socket.io* npm run dev",
    "build:scss": "node-sass client/scss/styles.scss  client/css/styles.css",
    "build:scss:watch": "node-sass client/scss/styles.scss  client/css/styles.css --watch",
    "build:js": "browserify -t brfs src/app/main.js -o client/bundle.js",
    "build:js:watch": "watchify -t brfs src/app/main.js -o client/bundle.js -v"
  },
  "keywords": [
    "poll",
    "survey"
  ],
  "author": "jalbertsr",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.2",
    "chart.js": "^2.6.0",
    "express": "^4.15.4",
    "file-saver": "^1.3.3",
    "mongoose": "^4.11.7",
    "socket.io": "^2.0.3"
  },
  "devDependencies": {
    "angular": "^1.6.6",
    "angular-route": "^1.6.6",
    "brfs": "^1.4.3",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "watchify": "^3.9.0"
  }
}
